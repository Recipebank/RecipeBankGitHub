        <activity
            android:name="com.rb.activities.HomPageActivity"
            android:label="@string/title_activity_hom_page" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
